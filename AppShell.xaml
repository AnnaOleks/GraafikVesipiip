<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GraafikVesipiip.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GraafikVesipiip.Views"
    Title="GraafikVesipiip">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:StartPage}"
        Route="StartPage" />

    <Shell.TitleView>
        <Label 
            Text="{Binding Title}" 
            Style="{StaticResource TitleLabel}" 
            FontFamily="ElMessiri-Regular.ttf"/>
    </Shell.TitleView>

</Shell>
