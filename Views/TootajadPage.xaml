<?xml version="1.0" encoding="utf-8" ?>
<!-- Страница показывает список работников с суммой часов за текущий месяц. -->
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GraafikVesipiip.Views.TootajadPage"
    Title="Töötajad">

    <CollectionView ItemsSource="{Binding Read}"
                    Margin="16"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!-- Одна строка: аватар | имя+часы | кнопка -->
                <Grid ColumnDefinitions="64,*,Auto" ColumnSpacing="12" Padding="8">

                    <!-- Круглый «аватар-заглушка» -->
                    <Border WidthRequest="48"
                            HeightRequest="48"
                            StrokeShape="Ellipse"
                            Background="#2a2a2a"
                            VerticalOptions="Center" />

                    <!-- Имя и часы за месяц -->
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="{Binding Tootaja.Nimi}" FontAttributes="Bold"/>
                        <Label Text="{Binding KuuTunnid, StringFormat='Tunnid kuus: {0:F1}'}"
                               FontSize="12" Opacity="0.8"/>
                    </VerticalStackLayout>

                    <!-- Кнопка «Vahetused» (дальше можно подвязать команду из VM) -->
                    <Button Grid.Column="2" Text="Vahetused" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
